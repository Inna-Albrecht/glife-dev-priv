# elevator
act 'Back': minut += 1 & gt 'hotel'

act 'Go to your room':
	msg 'Excuse me, but the elevator is not working'
	gt 'elevator'

!'
	if nomer = 0:
		msg 'You have not paid for a room'
		gt 'elevator'
	elseif nomer = 1:
		gt 'number1'
	elseif nomer = 2:
		gt 'number2'
	elseif nomer = 3:
		gt 'number3'
	elseif nomer = 4:
		gt 'number4'
	end
'!
end

