	act 'Return': minut += 1 & gt 'shop_tsar_bomba', 'start'

	i = 1

	:loopbomba_purses
		if bomba_purses[i] = 0:*p '<a href="exec: i = <<i>> & gt ''shop_tsar_bomba'', ''purses2''"><img src="images/pc/items/bomba/purses/<<i>>.jpg" 	height="250" /></a> '
		i += 1
	if i <= 20:jump 'loopbomba_purses'
