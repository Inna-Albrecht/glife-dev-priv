	$textgrup += '</td>'
elseif count1 = 6 and grupTipe[i] = 4:
	$textgrup +='</td></tr><tr>' & count1 = 0
end

if i < ARRSIZE('school_static_num'):jump 'markgruploop'

'<<$textgrup>>'

