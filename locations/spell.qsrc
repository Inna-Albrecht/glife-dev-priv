	'Accumulated manna <<mannaReset>> units.'

	act 'Absorb accumulated manna':
		cla
		*clr
		pcs_manna = pcs_manna + mannaReset
		mannaReset = 0
		xgt'fight','sta'
	end
	act 'Physical attacks':gt'boxing'

	if pcs_magik > 0:
		act 'Magic attacks':gt'magik'
	end
end

