	ml_guitars['jb-budget-acoustic'] = 1
	ml_strings = 2
	ml_guitar['chordbook'] = 1
	ml_guitar['hasguitar'] = 1 
	ml_guitar['carried'] = 1

	!! Has to set it here as cikl calculates it otherwise at midnight
	ml_performance['max_perform_minutes'] = pcs_instrmusic + pcs_vokal
